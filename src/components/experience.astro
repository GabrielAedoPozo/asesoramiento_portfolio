---
const items = [
	{
		from: '2023',
		to: 'Hoy',
		title: 'Consultor Estratégico Senior',
		company: 'Asesoramiento independiente',
		description:
			'Optimización operativa y apoyo estratégico para empresas multisectoriales, conectando visión de mercado con ejecución.',
		bullets: [
			'Optimización de procesos end-to-end y reducción de fricción operativa.',
			'Diagnóstico y priorización de iniciativas con foco en ROI.',
			'Análisis de mercado y posicionamiento para decisiones de crecimiento.',
		],
	},
	{
		from: '2020',
		to: '2023',
		title: 'Líder de Proyectos',
		company: 'Industria / Operaciones',
		description:
			'Gestión de iniciativas transversales con stakeholders de operaciones, finanzas y supply chain.',
		bullets: [
			'Implementación de mejoras continuas y estándares de operación.',
			'Seguimiento de KPIs y tableros para control de performance.',
			'Coordinación de equipos y proveedores en entornos exigentes.',
		],
	},
	{
		from: '2017',
		to: '2020',
		title: 'Analista / Consultor',
		company: 'Estrategia & Procesos',
		description:
			'Análisis de datos y procesos para sustentar decisiones y modernizar operaciones.',
		bullets: [
			'Mapeo de procesos y diseño de mejoras con quick wins.',
			'Modelos de costos y eficiencia para apoyar planificación.',
			'Documentación y entrenamiento para adopción de cambios.',
		],
	},
];
---

<section id="experiencia" class="relative bg-white py-24">
	<div class="mx-auto max-w-6xl px-6">
		<header class="max-w-2xl">
			<h2 class="text-gradient text-4xl font-black tracking-tight sm:text-5xl">Experiencia</h2>
			<p class="mt-4 text-lg text-black/70">
				Una línea de tiempo con los roles y el impacto principal en cada etapa.
			</p>
		</header>

		<ol class="relative mt-12 border-s border-black/10">
			{items.map((item) => (
				<li class="relative ms-6 pb-12">
					<span
						aria-hidden="true"
						class="absolute -start-[10px] top-[6px] h-4 w-4 rounded-full bg-[#5daaa1] ring-4 ring-white"
					></span>

					<time class="text-sm font-semibold uppercase tracking-widest text-black/50">
						{item.from} — {item.to}
					</time>
					<h3 class="mt-2 text-2xl font-extrabold tracking-tight text-[#00013f]">
						{item.title}
						<span class="font-black text-black/40"> · </span>
						<span class="font-semibold text-black/70">{item.company}</span>
					</h3>
					<p class="mt-3 max-w-3xl text-black/70">{item.description}</p>

					<ul class="mt-4 list-disc space-y-2 ps-5 text-black/70">
						{item.bullets.map((b) => (
							<li>{b}</li>
						))}
					</ul>
				</li>
			))}
		</ol>
	</div>
</section>
