<section class="relative py-20 sm:py-24 md:py-32 px-4 sm:px-6 overflow-hidden bg-slate-50">
  <!-- Decoraciones de fondo -->
  <div class="absolute top-0 left-0 w-full h-full opacity-5">
    <div class="banner-circle-1 absolute top-10 right-10 sm:right-20 w-48 h-48 sm:w-60 sm:h-60 md:w-72 md:h-72 bg-blue-500 rounded-full blur-3xl"></div>
    <div class="banner-circle-2 absolute bottom-10 left-10 sm:left-20 w-64 h-64 sm:w-80 sm:h-80 md:w-96 md:h-96 bg-cyan-400 rounded-full blur-3xl"></div>
  </div>

  <div class="relative max-w-6xl mx-auto text-center">
    <h2 class="banner-title text-gradient text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl 2xl:text-9xl font-black leading-tight">
      <span class="banner-word">Haz que tu empresa</span> <br /> 
      <span class="banner-word">alcance su</span> <br /> 
      <span class="banner-word">máximo potencial</span>
    </h2>
    
    <p class="banner-text mt-6 sm:mt-8 text-base sm:text-lg md:text-xl text-slate-600 max-w-2xl mx-auto px-4">
      Estrategias probadas que transforman operaciones y resultados
    </p>
  </div>
</section>

<script>
import gsap from 'gsap';
import { ScrollTrigger } from 'gsap/ScrollTrigger';

gsap.registerPlugin(ScrollTrigger);

// Animación de los círculos de fondo
gsap.to('.banner-circle-1', {
  scrollTrigger: {
    trigger: '.banner-title',
    start: 'top 80%',
    scrub: 1,
  },
  x: -100,
  y: 50,
  scale: 1.2,
  rotation: 180
});

gsap.to('.banner-circle-2', {
  scrollTrigger: {
    trigger: '.banner-title',
    start: 'top 80%',
    scrub: 1,
  },
  x: 100,
  y: -50,
  scale: 1.3,
  rotation: -180
});

// Animación del título con efecto de palabras
gsap.from('.banner-word', {
  scrollTrigger: {
    trigger: '.banner-title',
    start: 'top 75%',
  },
  opacity: 0,
  scale: 0.5,
  y: 100,
  rotation: -15,
  duration: 1,
  stagger: 0.3,
  ease: 'elastic.out(1, 0.5)'
});

// Animación del texto descriptivo
gsap.from('.banner-text', {
  scrollTrigger: {
    trigger: '.banner-text',
    start: 'top 85%',
  },
  opacity: 0,
  y: 50,
  duration: 0.8,
  delay: 0.8,
  ease: 'power2.out'
});
</script>
